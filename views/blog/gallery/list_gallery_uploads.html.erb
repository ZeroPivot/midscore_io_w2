        <label for="image_quantity">#Ô∏è‚É£</label>
        <input type="text" id="image_quantity" name="quantity_displayed" value="<%= @quantity_displayed || 175 %>" required>
        <input type="submit" value="Submit">
      </form>

      <br>

      <table padding="11" border="0">
      <tr>
        <% @gallery.each do |hash| %>
          <%
           gallery << hash
           %>
         <% end %>
      <% latest_id.downto(0) do |id| %>
