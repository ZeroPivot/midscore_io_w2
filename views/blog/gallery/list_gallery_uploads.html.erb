      <h1>For <%= @user %>'s gallery</h1>
<hr>
      <h1><b>OwO‚ÅâÔ∏è</b></h1>

      <form action="<%= "#{domain_name(@r)}/gallery/view/#{@user}/" %>" method="get">
        <label for="owo_display">‚ûóOwO:</label>
        <input type="number" id="owo_display" name="owo_count_rate" value="<%= @owo_count_rate || 3 %>" required>
        <input type="submit" value="Submit">
      </form>
      <br>

      <div style="display: flex; flex-wrap: wrap;">
        <% @owo_count_gallery.each_with_index do |image, index| %>
          <% next if image['owo_count'].nil? %>
          <% log(@owo_count_rate) %>
