            <br>
          <% end %>
          <div style="padding: 11px; box-sizing: border-box;">
            <div id="gallery_images">
              <p style="text-align: center;"><%= convert_ints_to_emoji(image['owo_count']) %> OwOs</p>
              <a href="<%= domain_name(@r) %>/gallery/view/<%= @user %>/id/<%= image['id'] %>" border="0">
                <img src="<%= domain_name(@r) %>/gallery/<%= @user %>/thumbnail_<%= image['file'] %>" alt="<%= @title %>">
              </a>
              <% if !image['attachments'].nil? %>
                <% image['attachments'].each_with_index do |attachment, index| %>
                  <div class="attachment">
                    *Ô∏è‚É£ <a href="/gallery/<%= @user %>/attachments/<%= attachment['file_attachment_name'] %>">
                    <% if @user == session['user'] %>
                      <%= attachment['file_attachment_name'] %></a> <a href="/gallery/view/<%= @user %>/id/<%= image['id'] %>/attachments/delete/<%= index  %>">DELETE</a>
                    <% end %>
                  </div><br />
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
<hr>
      <br><br>

