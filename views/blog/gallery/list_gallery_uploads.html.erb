          <% if id % @modulo_display == 0 %>
          </tr><tr>
          <% end %>
          <td>
          <div id="gallery_images">
            <a href="<%= domain_name(@r) %>/gallery/view/<%= @user %>/id/<%= hash['id'] %>" border="0">
            <img src="<%= domain_name(@r) %>/gallery/<%= @user %>/thumbnail_<%= hash['file'] %>" alt="<%= @title %>">
            </a>
          </div>
          </td>

        <% end %>
        <% end %>

      <center><div><%= @pages_html %></div></center>
    </tr>
    </table>
  </center>
  <center><div><%= @pages_html %></div></center>
