<html>
    <center>
        <h1>New UwU Collection</h1>
<form action="<%= "#{domain_name(@r)}/gallery/uwu/new" %>" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>
    <br />
    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="20" cols="50" required></textarea>
    <br />
    <input type="submit" value="Create">
</form>
</center>
</html>
