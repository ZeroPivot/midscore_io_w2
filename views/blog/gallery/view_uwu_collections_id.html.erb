<%# /root/midscore_io/views/blog/gallery/view_uwu_collections_id.html.erb %>

<%# Add your HTML structure here %>
<div class="uwu-collections">
    <h1>UwU Collection id #<%= @id %></h1>
    <h2>Title: <%= @collection['title'] %></h2>
    <p>Description: <%= @collection['description'] %></p>
    <a href="<%= "#{domain_name(@r)}/gallery/uwu/view/#{@user}" %>" class="btn btn-primary my-2">Back to UwU Collections</a>
</div>
<br>
<center>üñºÔ∏è</center>
<div class="gallery-images">
    <% @images.each_with_index do |image, index| %>
        <div class="image">
            <p><%= image[1]['title'] %></p>
            <p><%= image[1]['description'] %></p>
            <a href="<%= domain_name(@r) %>/gallery/view/<%= @user %>/id/<%= image[0] %>" border="0">
                <img src="<%= domain_name(@r) %>/gallery/<%= @user %>/thumbnail_<%= image[1]['file'] %>" alt="<%= image[1]['title'] %>">
            </a>
        </div>
    <% end %>
</div>






