<div class="gallery-images">
    <% @images.each_with_index do |image, index| %>
        <div class="image">
           <div style="text-align: center;"><p><%= image[1]['title'] %></p></div>
           <div style="text-align: center;"><p><%= image[1]['description'] %></p></div>
            <div style="text-align: center;">
                <a href="<%= domain_name(@r) %>/gallery/view/<%= @user %>/id/<%= image[0] %>" border="0">
                    <img src="<%= domain_name(@r) %>/gallery/<%= @user %>/thumbnail_<%= image[1]['file'] %>" alt="<%= image[1]['title'] %>">
                </a>
            </div>
            </a></div>
    <% end %>
