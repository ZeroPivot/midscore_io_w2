<%# Add your HTML structure here %>
<div class="uwu-collections">
    <div style="text-align: center;"><h1>UwU Collection id #<%= @id %></h1></div>
    <div style="text-align: center;"><h2>Title: <%= @collection['title'] %></h2></div>
    <div style="text-align: center;"><p>Description: <%= @collection['description'] %></p></div>
    <<div style="text-align: center;"><a href="<%= "#{domain_name(@r)}/gallery/uwu/view/#{@user}" %>" class="btn btn-primary my-2">Back to UwU Collections</a></div
</div>
<br>
